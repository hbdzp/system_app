<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/searchtype2"
        android:layout_marginLeft="20dip"
        android:layout_width="530dip"
        android:layout_height="60dip"
        android:gravity="center_vertical|left"
        android:textColor="@color/ff333333"
        android:textSize="25sp"/>
    <ImageView
        android:id="@+id/search_item_arrow_right"
        android:layout_width="10dip"
        android:layout_height="16dip"
        android:layout_centerInParent="true"
        android:layout_marginRight="12dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/right_point"/>
    <TextView
        android:id="@+id/optiontypevalue"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="wrap_content"
        android:layout_height="60dip"
        android:gravity="center_vertical"
        android:textColor="@color/ff333333"
        android:layout_toLeftOf="@id/search_item_arrow_right"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/search_item_arrow_left"
        android:layout_width="10dip"
        android:layout_height="16dip"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/optiontypevalue"
        android:background="@drawable/left_point"/>




</RelativeLayout>
